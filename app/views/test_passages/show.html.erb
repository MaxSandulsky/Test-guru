<h1>Passing the <%= @test_passage.test.title %> Test</h1>
<h2>Question <%= @test_passage.completeness %></h2>

<p>
  <b><%= @test_passage.current_question.body %></b>
</p>

<%= form_with url: test_passage_path(@test_passage), local: true,
method: :put do |form| %>

  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers,
  :id, :body, include_hidden: false do |box| %>
    <p>
      <%= box.check_box id: "answer_ids_#{box.object.id}" %>
      <%= box.label %>
    </p>
  <% end %>

  <p><%= link_to 'Gist Question', gist_test_passage_path(@test_passage), method: :post %></p>
  <p><%= form.submit 'Next' %></p>
<% end %>
