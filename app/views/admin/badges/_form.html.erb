<%= form_with model: [:admin, @badge], local: true do |form| %>
  <div>
    <p>
      <%= form.label t('.title') %>
      <%= form.text_field :title %>
    </p><br>

    <p>
      <%= form.label t('.description') %>
      <%= form.text_field :description %>
    </p><br>

    <p>
      <%= form.label t('.rule') %>
      <%= form.collection_select :rule, Badge::RULES, :to_s, :to_s, prompt: true %>
    </p><br>

    <p>
      <%= form.label t('.rule_value') %>
      <%= form.text_field :rule_value %>
    </p><br>

    <p>
      <%= form.label t('.pic_url')%>
      <%= form.text_field :pic_url %>
    </p>
  </div>

  <p><%= form.submit %></p>
<% end %>
